doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js' integrity='sha512-RXf+QSDCUQs5uwRKaDoXt55jygZZm2V++WUZduaU/Ui/9EGp3f/2KZVahFZBKGH0s774sd3HmrhUy+SgOFQLVQ==' crossorigin='anonymous' referrerpolicy='no-referrer')
    link(rel='stylesheet' href='/stylesheets/addStudent.css')
    title Update Grades


  nav.nav 
    .image
      img(src='/images/student.png')
    .links 
      ul.navList 
        li
          a(href='/') Home 

  body
    div(class='form_wrapper')
      div(class='form_container')
        div(class='title_container')
          h2 Add Student
        .row.clearfix
          div
            form(action=`/grade/${grade._id}/updateGrade` method='POST')
              div(class='input_field')
                span
                  i.fas.fa-graduation-cap(aria-hidden='true')
                input(type='text' name='grade' value=grade.grade placeholder='Grade' required)
              div(class='input_field')
                label(for='examDate') Exam Date: 
                br
                input(type='date' name='examDate' value=moment(grade.examDate).format('YYYY-MM-DD') required)
              input.button(type='submit' value='Update Grade')
