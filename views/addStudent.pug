doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js' integrity='sha512-RXf+QSDCUQs5uwRKaDoXt55jygZZm2V++WUZduaU/Ui/9EGp3f/2KZVahFZBKGH0s774sd3HmrhUy+SgOFQLVQ==' crossorigin='anonymous' referrerpolicy='no-referrer')
    link(rel='stylesheet' href='/stylesheets/addStudent.css')
    title Document
  body
    div(class='form_wrapper')
      div(class='form_container')
        div(class='title_container')
          h2 Add Student
        .row.clearfix
          div
            form(action='/addStudent' method='POST')
              div(class='input_field')
                span
                  i.fas.fa-id-card(aria-hidden='true')
                input(type='text' name='id' placeholder='ID' required)
              div(class='input_field')
                span
                  i.fa.fa-user(aria-hidden='true')
                input(type='text' name='fullName' placeholder='Full Name' required)
              div(class='input_field')
                span
                  i.fa.fa-envelope(aria-hidden='true')
                input(type='email' name='email' placeholder='Email' required)
              div(class='input_field')
                span
                  i.fas.fa-university(aria-hidden='true')
                input(type='text' name='faculty' placeholder='Faculty' required)
              div(class='input_field')
                label(for='birthDate') Birth Date: 
                br
                input(type='date' name='birthDate' required)
              input.button(type='submit' value='Add Student')
